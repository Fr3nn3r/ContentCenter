---
interface Props {
  url: string;
  title: string;
  fallbackImage?: string;
}

const { url, title, fallbackImage } = Astro.props;
---

<div class="demo-embed-wrapper">
  <div class="demo-embed-header">
    <div class="demo-dots">
      <span class="dot dot-red"></span>
      <span class="dot dot-yellow"></span>
      <span class="dot dot-green"></span>
    </div>
    <span class="demo-title">{title}</span>
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="demo-external-link"
      aria-label={`Open ${title} in new tab`}
    >
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    </a>
  </div>
  <div class="demo-embed-content">
    <iframe
      src={url}
      title={title}
      loading="lazy"
      class="demo-iframe"
      sandbox="allow-scripts allow-same-origin allow-forms allow-popups"
    ></iframe>
    <div class="demo-loading">
      <div class="demo-spinner"></div>
      <span>Loading demo...</span>
    </div>
  </div>
</div>

<style>
  .demo-embed-wrapper {
    border-radius: 16px;
    overflow: hidden;
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.1),
      0 10px 30px rgba(0, 0, 0, 0.15);
    background: white;
    border: 1px solid rgba(13, 115, 119, 0.2);
  }

  .demo-embed-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: linear-gradient(135deg, #0D7377 0%, #10B981 100%);
    color: white;
  }

  .demo-dots {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .dot-red { background: #FF6B6B; }
  .dot-yellow { background: #FFE66D; }
  .dot-green { background: #4ECB71; }

  .demo-title {
    flex: 1;
    font-size: 0.875rem;
    font-weight: 500;
    opacity: 0.95;
  }

  .demo-external-link {
    padding: 4px;
    border-radius: 4px;
    opacity: 0.8;
    transition: opacity 0.2s, background-color 0.2s;
  }

  .demo-external-link:hover {
    opacity: 1;
    background: rgba(255, 255, 255, 0.15);
  }

  .demo-embed-content {
    position: relative;
    aspect-ratio: 16 / 9;
    min-height: 500px;
    background: #f8f9fa;
  }

  .demo-iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .demo-loading {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    color: #6B7280;
    font-size: 0.875rem;
    pointer-events: none;
  }

  .demo-spinner {
    width: 32px;
    height: 32px;
    border: 3px solid #E5E7EB;
    border-top-color: #0D7377;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Hide loading when iframe loads */
  .demo-iframe:not([src=""]) + .demo-loading {
    opacity: 0;
    transition: opacity 0.3s ease 0.5s;
  }
</style>
