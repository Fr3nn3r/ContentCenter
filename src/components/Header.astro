---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

function isActive(href: string, current: string): boolean {
  if (href === '/') return current === '/';
  return current.startsWith(href);
}
---

<header class="border-b border-gray-200 bg-white">
  <nav class="mx-auto flex max-w-5xl items-center justify-between px-4 py-4 sm:px-6">
    <a href="/" class="text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors">
      Fred Brunner
    </a>

    <!-- Desktop navigation -->
    <ul class="hidden sm:flex items-center gap-8">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors',
              isActive(link.href, currentPath)
                ? 'text-gray-900'
                : 'text-gray-500 hover:text-gray-900',
            ]}
            aria-current={isActive(link.href, currentPath) ? 'page' : undefined}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile menu button -->
    <button
      type="button"
      class="sm:hidden p-2 text-gray-500 hover:text-gray-900 transition-colors"
      aria-label="Open menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
      id="menu-button"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile navigation -->
  <div id="mobile-menu" class="hidden sm:hidden border-t border-gray-200">
    <ul class="px-4 py-4 space-y-4">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block text-sm font-medium transition-colors',
              isActive(link.href, currentPath)
                ? 'text-gray-900'
                : 'text-gray-500 hover:text-gray-900',
            ]}
            aria-current={isActive(link.href, currentPath) ? 'page' : undefined}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const menuButton = document.getElementById('menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });
</script>
