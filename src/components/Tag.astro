---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;

const Tag = href ? 'a' : 'span';
---

<Tag
  href={href}
  class:list={[
    'inline-flex items-center px-2.5 py-0.5 text-xs font-medium rounded-full',
    'bg-pink-light text-hot-pink border border-hot-pink/30',
    href && 'hover:bg-hot-pink hover:text-white transition-colors',
    className,
  ]}
>
  <slot />
</Tag>
