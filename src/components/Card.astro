---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block rounded-lg border border-gray-200 bg-white p-6',
    href && 'hover:border-gray-300 hover:shadow-sm transition-all',
    className,
  ]}
>
  <slot />
</Tag>
