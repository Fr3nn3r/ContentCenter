---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block rounded-lg border-2 border-owl-green/20 bg-cream p-6',
    href && 'hover:border-hot-pink hover:shadow-md transition-all',
    className,
  ]}
>
  <slot />
</Tag>
