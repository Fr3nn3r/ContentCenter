---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Tag from '../components/Tag.astro';
import { buildBreadcrumbSchema } from '../lib/seo';

const breadcrumbSchema = buildBreadcrumbSchema([
  { name: 'Home', url: 'https://fredbrunner.com/' },
]);

const featuredProjects = [
  {
    title: 'ClaimEval',
    oneLiner: 'QA copilot for claims review',
    outcome: 'Faster QA cycles with audit trail',
    tags: ['AI', 'Insurance'],
    href: '/projects/claimeval',
  },
  {
    title: 'Prompt Management Playbook',
    oneLiner: 'Versioned, testable prompts',
    outcome: 'Zero mystery breakages',
    tags: ['AI', 'DevOps'],
    href: '/projects/prompt-playbook',
  },
  {
    title: 'Agentic Context Builder',
    oneLiner: 'Reliable LLM context pipelines',
    outcome: 'Debuggable agent workflows',
    tags: ['AI', 'Architecture'],
    href: '/projects/context-builder',
  },
];
---

<BaseLayout
  title="Audit-First AI for Insurance"
  description="Frederic Brunner - AI Solutions Architect in Switzerland. Done-for-you, audit-first AI that automates claims operations without sacrificing explainability. Book a call."
  schema={breadcrumbSchema}
>
  <div class="mx-auto max-w-5xl px-4 sm:px-6">
    <!-- Hero -->
    <section class="py-16 sm:py-24">
      <div class="max-w-2xl">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          Audit-first AI for claims and underwriting.
        </h1>
        <p class="mt-6 text-lg text-gray-600 leading-relaxed">
          I'm <strong>Frederic Brunner</strong>, founder of <strong>AI Swiss Knife</strong> (Zurich area).
          I deliver done-for-you AI that processes unstructured documents and automates real claims
          operations—without sacrificing explainability.
        </p>
        <ul class="mt-6 space-y-2 text-gray-600">
          <li class="flex items-start gap-2">
            <span class="text-gray-400 mt-1">-</span>
            <span><strong>Automate claim ops</strong>, not just summaries: open claims, check coverage, cross-check documents</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-gray-400 mt-1">-</span>
            <span><strong>Built for governance</strong>: structured outputs + review loops + evidence trails</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-gray-400 mt-1">-</span>
            <span><strong>Pragmatic stack</strong>: designed to integrate into real enterprise workflows</span>
          </li>
        </ul>
        <div class="mt-8 flex flex-wrap gap-4">
          <Button href="/contact" variant="primary">Book a call</Button>
          <Button href="/projects" variant="secondary">See what I build</Button>
        </div>
        <p class="mt-6 text-sm text-gray-500">
          Based near Dübendorf (Zurich) · 20+ years enterprise insurance delivery · 30 years programming
        </p>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="py-16 border-t border-gray-200">
      <div class="flex items-baseline justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900">Featured Projects</h2>
        <a href="/projects" class="text-sm text-gray-500 hover:text-gray-900 transition-colors">
          View all &rarr;
        </a>
      </div>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {featuredProjects.map((project) => (
          <Card href={project.href} class="flex flex-col">
            <div class="flex flex-wrap gap-2 mb-3">
              {project.tags.map((tag) => (
                <Tag>{tag}</Tag>
              ))}
            </div>
            <h3 class="font-semibold text-lg text-gray-900">{project.title}</h3>
            <p class="mt-1 text-sm text-gray-500">{project.oneLiner}</p>
            <p class="mt-3 text-sm text-gray-600">
              <span class="font-medium">Outcome:</span> {project.outcome}
            </p>
          </Card>
        ))}
      </div>
    </section>

    <!-- Featured Writing -->
    <section class="py-16 border-t border-gray-200">
      <div class="flex items-baseline justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900">Writing</h2>
        <a href="/blog" class="text-sm text-gray-500 hover:text-gray-900 transition-colors">
          View all &rarr;
        </a>
      </div>
      <p class="text-gray-500">
        Blog posts coming soon. Topics: AI reliability, insurance automation, prompt engineering.
      </p>
    </section>
  </div>
</BaseLayout>
