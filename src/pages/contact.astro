---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Callout from '../components/Callout.astro';
import { buildBreadcrumbSchema } from '../lib/seo';

const breadcrumbSchema = buildBreadcrumbSchema([
  { name: 'Home', url: 'https://fredbrunner.com/' },
  { name: 'Contact' },
]);
---

<BaseLayout
  title="Contact"
  description="Hire an AI Solutions Architect. Contact Fred Brunner for enterprise AI consulting, proof of concept development, or LLM implementation services in Switzerland."
  schema={breadcrumbSchema}
>
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">Contact</h1>
    <p class="mt-4 text-lg text-gray-600">
      Interested in working together? Have a question about AI in insurance or operations?
      I'd love to hear from you.
    </p>

    <div class="mt-12 space-y-8">
      <!-- What to include -->
      <Callout variant="info" title="What to include">
        <p class="text-sm text-gray-600 mb-3">To make our conversation productive, include:</p>
        <ul class="space-y-1 text-sm text-gray-600">
          <li class="flex items-start gap-2">
            <span class="text-gray-400">-</span>
            <span>Line of business + country</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-gray-400">-</span>
            <span>Document types + typical pack size</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-gray-400">-</span>
            <span>What "success" means (speed, accuracy, auditability, cost)</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-gray-400">-</span>
            <span>Current system constraints (Guidewire, repository, exports)</span>
          </li>
        </ul>
      </Callout>

      <!-- Email -->
      <div>
        <h2 class="font-semibold text-lg text-gray-900">Email</h2>
        <p class="mt-2">
          <a
            href="mailto:frederic.brunner@aiswissknife.com"
            class="text-hot-pink hover:underline"
          >
            frederic.brunner@aiswissknife.com
          </a>
        </p>
        <p class="mt-1 text-sm text-gray-500">
          Best for detailed inquiries. I typically respond within 1-2 business days.
        </p>
      </div>

      <!-- Calendly Embed -->
      <div>
        <h2 class="font-semibold text-lg text-gray-900">Schedule a Call</h2>
        <p class="mt-2 text-gray-500 mb-4">
          For a quick intro call, pick a time that works for you:
        </p>
        <div class="calendly-inline-widget rounded-xl overflow-hidden border border-gray-200 shadow-lg" data-url="https://calendly.com/frederic-brunner/intro?hide_gdpr_banner=1" style="min-width:320px;height:630px;"></div>
        <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
      </div>

      <!-- Social -->
      <div>
        <h2 class="font-semibold text-lg text-gray-900">Elsewhere</h2>
        <ul class="mt-2 space-y-2">
          <li>
            <a href="https://www.linkedin.com/in/frdbrunner/" class="text-hot-pink hover:underline">
              LinkedIn
            </a>
          </li>
          <li>
            <a href="https://github.com/frdbrunner" class="text-hot-pink hover:underline">
              GitHub
            </a>
          </li>
          <li>
            <a href="https://x.com/fredbrunner" class="text-hot-pink hover:underline">
              X (Twitter)
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
