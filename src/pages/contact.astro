---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Contact"
  description="Get in touch with Fred Brunner for AI consulting, collaboration, or questions."
>
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">Contact</h1>
    <p class="mt-4 text-lg text-gray-600">
      Interested in working together? Have a question about AI in insurance or operations?
      I'd love to hear from you.
    </p>

    <div class="mt-12 space-y-8">
      <!-- Email -->
      <div>
        <h2 class="font-semibold text-lg text-gray-900">Email</h2>
        <p class="mt-2">
          <a
            href="mailto:fred@example.com"
            class="text-blue-600 hover:underline"
          >
            fred@example.com
          </a>
        </p>
        <p class="mt-1 text-sm text-gray-500">
          Best for detailed inquiries. I typically respond within 1-2 business days.
        </p>
      </div>

      <!-- Calendar -->
      <div>
        <h2 class="font-semibold text-lg text-gray-900">Schedule a Call</h2>
        <p class="mt-2 text-gray-500">
          For a quick intro call, book a time directly:
        </p>
        <div class="mt-4">
          <Button href="https://calendly.com/your-link" variant="secondary">
            Book a 15-min call
          </Button>
        </div>
      </div>

      <!-- Social -->
      <div>
        <h2 class="font-semibold text-lg text-gray-900">Elsewhere</h2>
        <ul class="mt-2 space-y-2">
          <li>
            <a href="https://linkedin.com/in/your-profile" class="text-blue-600 hover:underline">
              LinkedIn
            </a>
          </li>
          <li>
            <a href="https://github.com/your-username" class="text-blue-600 hover:underline">
              GitHub
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
